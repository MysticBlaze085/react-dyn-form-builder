{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "lib": [
            "dom",
            "esnext"
        ],
        "paths": {
            "@material-tailwind/react/*": [
                "./node_modules/@material-tailwind/react/*"
            ]
        },
        "types": [
            "node",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "src/**/*",
        "index.tsx",
        "node_modules/@material-tailwind/react"
    ],
    "exclude": [
        "stories",
        "node_modules",
        "**/*.spec.ts",
        "**/*.stories.ts",
        "**/*.stories.tsx"
    ]
}
